<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelecionarTipoActivity">
<androidx.appcompat.widget.LinearLayoutCompat
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">
    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/connect_without_contact_24px"
        app:lottie_fileName="empleador.json"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/tipoempleador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tipo_empleador"
        app:icon="@drawable/outline_arrow_circle_right_24"
        android:layout_marginTop="14dp"
        android:gravity="center"
        app:cornerRadius="18dp"
        style="@style/Widget.MaterialComponents.Button"/>

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="15dp"
        app:lottie_fileName="postulante.json"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/tipopostulante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tipo_postulante"
        app:icon="@drawable/outline_arrow_circle_right_24"
        android:layout_marginTop="14dp"
        android:gravity="center"
        app:cornerRadius="18dp"
        style="@style/Widget.MaterialComponents.Button"/>


</androidx.appcompat.widget.LinearLayoutCompat>
</RelativeLayout>